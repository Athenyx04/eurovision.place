---

<Layout title="EuroSorter">
	<div class="flex grow flex-col sm:flex-row">
		{songs.map(({ title, artist, country, countryCode, previewURL, imageURL }) => (
			<SongCard
				title={title}
				artist={artist}
				country={country}
				countryCode={countryCode}
				previewUrl={previewURL}
